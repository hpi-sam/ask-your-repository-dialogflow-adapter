{
  "extends": [
    "airbnb-base",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "jest",
    "flowtype",
    "mocha"
  ],
  "env": {
    "mocha": true,
    "jest/globals": true
  },
  "rules": {
    "no-param-reassign": ["error", { "props": true, "ignorePropertyModificationsFor": ["conv"] }]
  },
  "globals": {
    "expect": true,
    "sinon": true
  }
}
